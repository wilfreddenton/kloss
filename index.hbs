{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header id="main-header" class="{{#if pagination.prev}}hide {{/if}}main-header on-index {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div id="jumbo" class="main-header-content inner">
        <h1 class="page-title">{{@blog.title}}</h1>
        <p class="page-description">{{@blog.description}}</p>
    </div>
</header>
{{#unless pagination.prev}}
  <hr id="split">
{{/unless}}
{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
